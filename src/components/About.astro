---
import { useTranslations } from '../lib/i18n';
import OptimizedImage from './ui/OptimizedImage.astro';
import interiorImg from '../assets/interior-placeholder.svg';
import chefImg from '../assets/chef-placeholder.svg';

const t = useTranslations(Astro.currentLocale || 'en');
---

<section id="story" class="py-24 md:py-32 bg-alabaster text-charcoal overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 md:px-8 space-y-24 md:space-y-32">
    
    <!-- Story Block -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-20 items-center">
      <!-- Text Side -->
      <div class="space-y-8 md:pr-8 reveal-on-scroll">
        <div class="space-y-2">
          <span class="text-terracotta uppercase tracking-widest text-sm font-medium">
            {t('about.subtitle')}
          </span>
          <h2 class="text-4xl md:text-5xl font-serif font-bold leading-tight">
            {t('about.title')}
          </h2>
        </div>
        <div class="space-y-6 text-lg text-charcoal/80 leading-relaxed font-sans">
          <p>
            {t('about.description')}
          </p>
          <p>
            {t('about.philosophy')}
          </p>
        </div>
      </div>

      <!-- Image Side -->
      <div class="relative h-[500px] w-full rounded-lg overflow-hidden shadow-xl md:translate-y-8 reveal-on-scroll" data-delay="200">
        <OptimizedImage
          src={interiorImg}
          alt="Restaurant Interior"
          class="w-full h-full object-cover transition-transform duration-700 hover:scale-105"
        />
      </div>
    </div>

    <!-- Chef Block -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-20 items-center md:flex-row-reverse">
      <!-- Image Side (Left on Desktop) -->
      <div class="relative h-[600px] w-full rounded-lg overflow-hidden shadow-xl md:-translate-y-8 order-2 md:order-1 reveal-on-scroll">
        <OptimizedImage
          src={chefImg}
          alt={t('about.chef.name')}
          class="w-full h-full object-cover transition-transform duration-700 hover:scale-105"
        />
      </div>

      <!-- Text Side (Right on Desktop) -->
      <div class="space-y-8 md:pl-8 order-1 md:order-2 reveal-on-scroll" data-delay="200">
        <div class="space-y-2">
          <span class="text-terracotta uppercase tracking-widest text-sm font-medium">
            {t('about.chef.title')}
          </span>
          <h3 class="text-3xl md:text-4xl font-serif font-bold leading-tight">
            {t('about.chef.name')}
          </h3>
        </div>
        <p class="text-lg text-charcoal/80 leading-relaxed font-sans">
          {t('about.chef.bio')}
        </p>
        
        <!-- Signature or decorative element could go here -->
      </div>
    </div>

  </div>
</section>
