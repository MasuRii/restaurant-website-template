---
import ReservationForm from './ReservationForm';
import { useTranslations } from '../lib/i18n';

const t = useTranslations(Astro.currentLocale || 'en');
// eslint-disable-next-line @typescript-eslint/no-explicit-any
const reservationData = t('reservation', { returnObjects: true }) as any;
---

<section id="reservations" class="py-24 md:py-32 bg-alabaster dark:bg-charcoal-dark relative scroll-mt-20">
  <div class="max-w-7xl mx-auto px-4 md:px-8">
    
    <div class="max-w-3xl mx-auto text-center mb-16 reveal-on-scroll">
      <span class="text-xs font-sans uppercase tracking-[0.2em] text-charcoal/80 dark:text-alabaster/80 mb-4 block">Join Us</span>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-serif font-medium text-charcoal dark:text-alabaster mb-6">{reservationData.title}</h2>
      <p class="text-lg md:text-xl text-charcoal/70 dark:text-alabaster/70 font-sans font-light leading-relaxed">
        {reservationData.description}
      </p>
    </div>

    <div class="reveal-on-scroll" data-delay="200">
      <ReservationForm 
        client:visible 
        labels={reservationData.form} 
        messages={{
          urgency: reservationData.urgency,
          cancellation: reservationData.cancellation
        }}
      />
    </div>

  </div>
</section>