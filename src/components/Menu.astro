---
import MenuDisplay from './MenuDisplay';
import { useTranslations } from '../lib/i18n';

const t = useTranslations(Astro.currentLocale || 'en');
const menuData = t('menu', { returnObjects: true });
---

<section id="menu" class="py-24 md:py-32 bg-paper relative scroll-mt-20">
  <div class="max-w-7xl mx-auto px-4 md:px-8 mb-16 md:mb-24 text-center">
    <span class="text-xs font-sans uppercase tracking-[0.2em] text-charcoal/60 mb-4 block">Taste the Season</span>
    <h2 class="text-4xl md:text-5xl lg:text-6xl font-serif font-medium text-charcoal">{menuData.title}</h2>
  </div>

  <MenuDisplay client:visible data={menuData} />
</section>
