---
import GalleryGrid from './GalleryGrid';
import i18next from 'i18next';
import galleryImages from '../data/gallery.json';

const { t } = i18next;
---

<section id="gallery" class="py-24 bg-alabaster relative overflow-hidden">
  <div class="container mx-auto px-4 md:px-8">
    <div class="max-w-3xl mx-auto text-center mb-16 reveal-on-scroll">
      <h2 class="text-4xl md:text-5xl font-serif text-charcoal mb-6">
        {t('gallery.title', 'Visual Proof')}
      </h2>
      <p class="text-lg md:text-xl text-charcoal/70 leading-relaxed font-sans max-w-2xl mx-auto">
        {t('gallery.description', 'Immerse yourself in the atmosphere of RisÅ« & Oak, where rustic meets refined.')}
      </p>
    </div>

    <div class="reveal-on-scroll" data-delay="200">
      <GalleryGrid client:visible images={galleryImages} />
    </div>
  </div>

  {/* Decorative elements */}
  <div class="absolute top-0 right-0 w-64 h-64 bg-sage/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-charcoal/5 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2 pointer-events-none"></div>
</section>
