---
import GalleryGrid from './GalleryGrid';
import i18next from 'i18next';
import galleryImages from '../data/gallery.json';
import { getImage } from 'astro:assets';
import type { ImageMetadata } from 'astro';

const { t } = i18next;

// Ensure base URL ends with a slash for fallback paths
const rawBase = import.meta.env.BASE_URL;
const base = rawBase.endsWith('/') ? rawBase : rawBase + '/';

// Import all gallery images from assets
const imageFiles = import.meta.glob<{ default: ImageMetadata }>('../assets/images/gallery/*.jpg', { eager: true });

// Map JSON data to optimized images
const optimizedImages = await Promise.all(
  galleryImages.map(async (image) => {
    // Extract filename from the src path in JSON (e.g. "/images/gallery/food-1.jpg" -> "food-1.jpg")
    const filename = image.src.split('/').pop();
    // Construct the key for imageFiles
    const imagePath = `../assets/images/gallery/${filename}`;
    
    const imageMetadata = imageFiles[imagePath]?.default;

    if (!imageMetadata) {
      console.warn(`Image not found in assets: ${imagePath}`);
      // Fallback: prefix with base URL for public folder images
      const cleanPath = image.src.startsWith('/') ? image.src.slice(1) : image.src;
      return { ...image, src: `${base}${cleanPath}` };
    }

    const optimized = await getImage({
      src: imageMetadata,
      format: 'webp',
      width: 1200, // Higher res for lightbox
    });

    return {
      ...image,
      src: optimized.src,
    };
  })
);
---

<section id="gallery" class="py-24 bg-alabaster dark:bg-charcoal-dark relative overflow-hidden">
  <div class="container mx-auto px-4 md:px-8">
    <div class="max-w-3xl mx-auto text-center mb-16 reveal-on-scroll">
      <h2 class="text-4xl md:text-5xl font-serif text-charcoal dark:text-alabaster mb-6">
        {t('gallery.title', 'Visual Proof')}
      </h2>
      <p class="text-lg md:text-xl text-charcoal/70 dark:text-alabaster/70 leading-relaxed font-sans max-w-2xl mx-auto">
        {t('gallery.description', 'Immerse yourself in the atmosphere of RisÅ« & Oak, where rustic meets refined.')}
      </p>
    </div>

    <div class="reveal-on-scroll" data-delay="200">
      <GalleryGrid client:visible images={optimizedImages} />
    </div>
  </div>

  {/* Decorative elements */}
  <div class="absolute top-0 right-0 w-64 h-64 bg-sage/5 dark:bg-sage/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-charcoal/5 dark:bg-alabaster/5 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2 pointer-events-none"></div>
</section>
