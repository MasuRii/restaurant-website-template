---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import { useTranslations } from '../lib/i18n';

const t = useTranslations(Astro.currentLocale || 'en');
---

<BaseLayout title={t('site.title')}>
  <!-- Hero Section -->
  <Hero />

  <!-- About / Story Section -->
  <About />

  <!-- Temporary Placeholders for remaining sections -->
  <div class="max-w-7xl mx-auto px-4 md:px-8 space-y-24 pb-24">
    <section id="menu" class="min-h-[50vh] py-20 border-t border-charcoal/10 scroll-mt-20 flex items-center justify-center bg-gray-50 rounded-lg mt-24">
      <div class="text-center">
        <h2 class="text-4xl font-serif font-bold text-charcoal mb-6">{t('nav.menu')}</h2>
        <p class="text-lg text-charcoal/60">Menu Component Coming Soon</p>
      </div>
    </section>

    <section id="events" class="min-h-[50vh] py-20 border-t border-charcoal/10 scroll-mt-20 flex items-center justify-center bg-gray-50 rounded-lg">
      <div class="text-center">
        <h2 class="text-4xl font-serif font-bold text-charcoal mb-6">{t('nav.privateDining')}</h2>
        <p class="text-lg text-charcoal/60">Events Component Coming Soon</p>
      </div>
    </section>

    <section id="location" class="min-h-[50vh] py-20 border-t border-charcoal/10 scroll-mt-20 flex items-center justify-center bg-gray-50 rounded-lg">
      <div class="text-center">
        <h2 class="text-4xl font-serif font-bold text-charcoal mb-6">{t('nav.location')}</h2>
        <p class="text-lg text-charcoal/60">Location Component Coming Soon</p>
      </div>
    </section>

    <section id="reservations" class="min-h-[50vh] py-20 border-t border-charcoal/10 scroll-mt-20 flex items-center justify-center bg-gray-50 rounded-lg">
       <div class="text-center">
        <h2 class="text-4xl font-serif font-bold text-charcoal mb-6">{t('cta.reserve')}</h2>
        <p class="text-lg text-charcoal/60">Reservations Component Coming Soon</p>
      </div>
    </section>
  </div>
</BaseLayout>
