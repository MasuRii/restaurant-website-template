---
import BaseLayout from '../layouts/BaseLayout.astro';
import { useTranslations } from '../lib/i18n';

const t = useTranslations(Astro.currentLocale || 'en');
---

<BaseLayout title={t('site.title')}>
  <div class="max-w-4xl mx-auto p-8 space-y-8">
    <!-- Hero Section -->
    <section id="hero" class="min-h-[80vh] flex flex-col justify-center space-y-8">
      <div class="space-y-4">
        <h1 class="text-5xl font-serif font-bold text-primary">{t('site.title')}</h1>
        <p class="text-xl max-w-prose">{t('site.description')}</p>
      </div>

      <div class="flex gap-4">
        <button
          class="px-6 py-3 bg-primary text-alabaster rounded-full font-medium hover:-translate-y-0.5 transition-transform shadow-sm cursor-pointer"
        >
          {t('cta.reserve')}
        </button>
        <button
          class="px-6 py-3 border border-primary text-primary rounded-full font-medium hover:bg-primary/5 transition-colors cursor-pointer"
        >
          {t('cta.viewMenu')}
        </button>
      </div>
    </section>

    <!-- Sections for Scroll Testing -->
    <section id="story" class="min-h-screen py-20 border-t border-charcoal/10 scroll-mt-20">
      <h2 class="text-4xl font-serif font-bold text-primary mb-6">{t('nav.story')}</h2>
      <p class="text-lg max-w-prose text-charcoal/80 mb-8">
        The story of RisÅ« & Oak begins with a passion for wood-fired cooking and seasonal ingredients.
        (Placeholder for Story Section)
      </p>
    </section>

    <section id="events" class="min-h-screen py-20 border-t border-charcoal/10 scroll-mt-20">
      <h2 class="text-4xl font-serif font-bold text-primary mb-6">{t('nav.privateDining')}</h2>
      <p class="text-lg max-w-prose text-charcoal/80 mb-8">
        Join us for special events and private dining experiences.
        (Placeholder for Events Section)
      </p>
    </section>

    <section id="location" class="min-h-screen py-20 border-t border-charcoal/10 scroll-mt-20">
      <h2 class="text-4xl font-serif font-bold text-primary mb-6">{t('nav.location')}</h2>
      <p class="text-lg max-w-prose text-charcoal/80 mb-8">
        742 Evergreen Terrace, San Francisco, CA 94102
        (Placeholder for Location Section)
      </p>
    </section>

    <section id="reservations" class="min-h-[50vh] py-20 border-t border-charcoal/10 scroll-mt-20">
       <h2 class="text-4xl font-serif font-bold text-primary mb-6">{t('cta.reserve')}</h2>
       <p class="text-lg max-w-prose text-charcoal/80 mb-8">
         Book your table now.
         (Placeholder for Reservations Section)
       </p>
    </section>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 pt-8 border-t border-charcoal/10">
      <div class="p-6 bg-white rounded-lg shadow-sm">
        <h2 class="text-2xl font-serif mb-2 text-accent">Typography & Color</h2>
        <p class="text-charcoal/80">
          This card tests the design tokens. The heading uses the <span
            class="text-accent font-bold">Terracotta accent</span
          >.
        </p>
      </div>
      <div class="p-6 bg-charcoal text-alabaster rounded-lg shadow-sm">
        <h2 class="text-2xl font-serif mb-2">Dark Context</h2>
        <p class="text-alabaster/80">Testing the reverse color scheme functionality.</p>
      </div>
    </div>
  </div>
</BaseLayout>
